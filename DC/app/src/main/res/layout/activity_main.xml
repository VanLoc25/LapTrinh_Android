<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <!-- Custom CalendarView -->
    <GridLayout
        android:id="@+id/gridCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="6"
        android:layout_marginBottom="16dp"
        android:background="#212121">

        <!-- Add buttons or textviews for each day of the week -->
    </GridLayout>

    <!-- Time entry rows -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Time slots can be created dynamically in code -->
        <TextView
            android:id="@+id/timeSlot1"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:padding="8dp"
            android:text="7:30-16h (8h)"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/timeSlot2"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:padding="8dp"
            android:text="6h-14h"
            android:textColor="#FFFFFF" />

        <!-- Additional slots here -->
    </LinearLayout>


</LinearLayout>

